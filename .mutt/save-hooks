# vim: set ft=muttrc
#
# Configure where things get saved to.
#

save-hook "~C vim@vim.org"                    =maillists/vim
save-hook "~C vim-dev@vim.org"                =maillists/vim
save-hook "~C vim-announce@vim.org"           =maillists/vim
save-hook "~C mutt-users@mutt.org"            =maillists/mutt
save-hook "~C ipython-user@scipy.net"         =maillists/ipython
save-hook "~C python-chinese@lists.python.cn" =maillists/pythonCN
save-hook "~C .*@python.org"                  =maillists/python
save-hook "~C ubuntu-users@lists.ubuntu.com"  =maillists/ubuntu
save-hook "~C .*cygwin@cygwin.com"            =maillists/cygwin
save-hook .*                                =mbox
